    <main class="main-event">
       
        <div class="container p-5" style="height: 600px;">
            <div class="row mt-3">
                <div class="card">
                    <div class="card-body" style = "width: 400px;">
                        <img class = "card-img-top" src="images/Most-Popular-American-Foods.webp" alt="" style="width: 410px; height: auto;">
                        <br>
                        <br>
                        <h4 class="card-title">American</h4>
                        <br>
                        <h6 class="card-subtitle text-muted">We know you're hungry, here's the details...</h6>
                        <br>
                        <% if(events) {%>

                        <div class="card-text">
                            <p><span class="font-weight-bold">Host Name:</span><%= events.name%></p>
                            <p><span class="font-weight-bold">Date/Time:</span> July 13th, 2023 from 11AM to 8PM</p>
                            <p><span class="font-weight-bold">Location:</span><%= events.location%></p>
                            <p><span class="font-weight-bold">Details:</span><%= events.details%></p>
                        </div>

                        <% } else { %>
                            <p>No event matches the id.</p>
                            <% } %>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-event"><i class="fa-solid fa-pen-to-square"></i></button>
                        <button class = "btn btn-event"><i class="fa-solid fa-trash"></i></button>
                    </div>
                    <br>
                </div>
            </div>
        </div>
        
