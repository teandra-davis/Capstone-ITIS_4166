<div class="text-center py-5">
    <h1>Log In</h1>
</div>
<div class="container py-5" style="height: 600px;">
    <form action = '/users/login' method = 'POST'>

        <!--Email-->
        <div class="form-outline mb-4">
            <label class= "form-label" for="email">Email</label>
            <input class= "form-control" type="email" id="email" name="email" required>
        </div>

        <!--Password-->
        <div class="form-outline mb-4">
            <label class= "form-label" for="password">Password</label>
            <input class= "form-control" type="password" id="password" name="password" minlength="8" maxLength = "64" required>
        </div>

        <button class="btn btn-primary btn-block mb-4" type="submit" value="login">Login</button>     


